{% extends 'base-site.html.twig' %}

{% block body %}
<div class="detail-product m-3">
    <div class="d-flex align-items-center mb-2">
        <img class="m-2" src=" {{ asset('img/boutton-retour.svg') }} ">
        {% for category in product.categories %}
        {% if category.parent == false %}
        <a href=" {{ path('products_by_category', {'category': category.id }) }} "
            class="text-decoration-underline">Retour à la liste des produits</a>
        {% endif %}
        {% endfor %}
    </div>

    {# card detail product #}
    <div class="d-flex justify-content-center align-items-center card-product m-3">
        {% for image in product.images %}
        <img class="image-product" src=" {{ asset('img/products/' ~ image.url) }} ">
        {% endfor %}
        <div class="content-product d-flex flex-column align-items-center">
            <h2> {{ product.title }} </h2>
            <h3 class="colorBaseText mb-2"> {{ product.price }} €</h3>
            <p class=" mb-3 text-center"> {{ product.description }} </p>
            <a class="btn button-color-base">Ajouter au panier</a>
            <div class="check-delivery mt-3 bold background-color-2 p-3 d-flex flex-column align-items-start justify-content-around">
                <div class="d-flex align-items-center text-center">
                    <img src=" {{ asset('img/check.svg') }} " width="15px">
                    <p>Livraison 2 à 4 jours</p>
                </div>
                <div class="d-flex align-items-center">
                    <img src=" {{ asset('img/check.svg') }} " width="15px">
                    <p>Offerte dès 49&nbsp;€ d'achat&nbsp;!</p>
                </div>
            </div>
        </div>
    </div>
</div>

{% block bestSeller %}
{% include 'parts/bestseller.html.twig' %}
{% endblock bestSeller %}

{% block newsletter %}
{% include 'parts/newsletter.html.twig' %}
{% endblock newsletter %}

{% block infos %}
{% include 'parts/infos.html.twig' %}
{% endblock infos %}


{% endblock body %}