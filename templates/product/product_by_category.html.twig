{% extends 'base-site.html.twig' %}

{% block body %}

{% for category in categories %}
<section class="products">
    <h2 class="mt-3"> {{ category.name }} </h2>

    <div class="d-flex flex-row flex-wrap justify-content-center align-items-center cards-container">
        {% for product in category.products %}
        <div class="card m-3 row" style="width: 15rem;">
            {% for image in product.images %}
            <img class="p-0" src="{{ asset('img/products/'~ image.url) }}" class="card-img-top" alt=" {{ image.alt }} ">
            {% endfor %}
            <div class="card-body d-flex flex-column align-items-center justify-content-around">
                <h5 class="card-title fs-6 text-center"> {{ product.title }} </h5>
                {% if product.salePrice %}
                <p class="text-danger">{{ product.salePrice }} € <span class="text-dark"> - </span><span class="text-decoration-line-through text-dark">{{ product.price }} €</span></p>
                {% else %}
                <p class="card-text">{{ product.price }} €</p>
                {% endif %}
                <a href="{{ path('detail_product', {'product': product.id }) }}"
                    class="btn button-color-base m-3">Voir l'article</a>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endfor %}
</section>

{% block bestSeller %}
{% include 'parts/bestseller.html.twig' %}
{% endblock bestSeller %}

{% block newsletter %}
{% include 'parts/newsletter.html.twig' %}
{% endblock newsletter %}

{% block infos %}
{% include 'parts/infos.html.twig' %}
{% endblock infos %}

{% endblock body %}