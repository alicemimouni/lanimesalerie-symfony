{% extends 'base-admin.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-5 text-capitalize margin-left-none">Catégorie {{ category.name }} </h1>
</div>
<div class="container mt-5">
    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ category.beginDate ? category.beginDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ category.endDate ? category.endDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Catégorie parente</th>
                <td>{{ category.parent }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="container">
<a class="btn btn-outline-warning text-warning mt-4 mb-4" href="{{ path('category_edit', {'id': category.id}) }}">éditer</a>

{{ include('category/_delete_form.html.twig') }}

<a class="text-success" href="{{ path('category_index') }}">Retour à la liste des catégories</a>
</div>
{% endblock %}
