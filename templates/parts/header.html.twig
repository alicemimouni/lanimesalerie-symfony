<!--######################### HEADER ####################################-->

<section id="header">
    <!--HEADER DELIVERY RETURN-->
    <div id="barDelivery">
        <div class="delRet">
            <img src="{{ asset('img/livraison.svg') }}" alt="Logo livraison gratuite">
            <p>Livraison offerte dès 49 €</p>
        </div>
        <div class="delRet dNone">
            <img src="{{ asset('img/retour.svg') }}" alt="Logo retour gratuit">
            <p>Retour gratuit sous 30 jours</p>
        </div>
    </div>
    <header>
        <!--LOGO BASKET NAVBAR-->
        <div id="navBarr">
            <a href="{{ path('default') }}"><img id="logo" src=" {{ asset('img/logo.svg') }} "
                    alt="Logo La Nîmes'Alerie"></a>
                <!--LOGO CARD CONNEXION-->
                <a href=" {{ path('search') }} " class="btn btn-outline-orange"><img width="18px" src=" {{ asset('img/search.svg') }} " alt="Rechercher un produit"></a>
                <a href="{{ path('app_login') }}"><img src=" {{ asset('img/connexion.png') }} " alt="Logo connexion" width="25px"></a>
                <a href=""><img src=" {{ asset('img/panier.svg') }} " alt="Logo panier" width="25px"></a>
            <!--NAVBAR MOBILE-->
            <nav class="navbar navbar-mobile navbar-expand-lg navbar-light bg-wight dNonePc">
                <div class="container-fluid myNavBar">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                {% for category in categories %}
                                {% if category.parent == false %}
                                <a class="nav-item nav-link active"
                                    href=" {{ path('products_by_category', {'category': category.id }) }} ">
                                    {{ category.name }} </a>
                                {% endif %}
                                {% endfor %}
                            </li>
                            <li class="nav-item">
                                <a class="nav-link colorBaseText" href="#">Promos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <!--NAVBAR PC-->
        <nav class="navbar navPc navbar-expand-lg navbar-light bg-white dNone">
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav text-uppercase fs-4">
                    {% for category in categories %}
                    {% if category.parent == false %}
                    <a class="nav-item nav-link active"
                        href="{{ path('products_by_category', {'category': category.id }) }}"> {{ category.name }} </a>
                    {% endif %}
                    {% endfor %}
                    <a class="nav-item nav-link colorBaseText" href="#">Promos</a>
                    <a class="nav-item nav-link" href="#">Contact</a>
                </div>
            </div>
        </nav>
    </header>

</section>