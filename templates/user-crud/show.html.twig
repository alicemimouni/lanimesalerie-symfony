{% extends 'base-admin.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<div class="container mb-5">
    <h1> {{ user.firstname }} {{ user.lastname }} </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            {# <tr>
                <th>Role</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr> #}
             <tr>
                <th>Role</th>
               {% if user.roles == ["ROLE_ADMIN"] %}
                        <td>Administrateur</td>
                        {% else %}
                        <td>Utilisateur</td>
                        {% endif %}
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.telNumber }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ user.isMan ? 'Homme' : 'Femme' }}</td>
            </tr>
            {% if user.address %}
             <tr>
                <th>Adresse</th>
                <td>{{ user.address.line1 }}</td>
            </tr>
            <tr>
                <th>Complément</th>
                <td>{{ user.address.complement }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ user.address.postalCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.address.city }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Date de naissance</th>
                <td>{{ user.birthDate ? user.birthDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Date d'inscription</th>
                <td>{{ user.registrerDate ? user.registrerDate|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-warning text-warning mt-4 mb-4" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('user-crud/_delete_form.html.twig') }}

    <a class="text-success"  href="{{ path('user_index') }}">Retour à la liste</a>
</div>
{% endblock %}
