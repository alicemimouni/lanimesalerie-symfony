{% extends 'base-admin.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container crud">
    <h1 class="mt-5 margin-left-none">Catégories</h1>

    <table class="table table-warning">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6">Aucun résultat</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}" class="btn btn-outline-warning mt-3 mb-5 text-warning">Créer une catégorie</a>
</div>
{% endblock %}